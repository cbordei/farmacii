%p#notice= notice
%h1 Listing Pharmacies
= search_form_for @q do |f|
  = f.label :name_cont
  = f.search_field :name_cont 

  = f.label :county_cont
  = f.search_field :county_cont

  = f.label :city_cont
  = f.search_field :city_cont

  = f.submit 
%table
  %thead
    %tr
      %th Name
      %th Structure
      %th County
      %th City
      %th Address
      %th Chief pharmacist name
      %th Details
      %th{:colspan => "3"}
  %tbody
    - @pharmacies.each do |pharmacy|
      %tr
        %td= pharmacy.name
        %td= pharmacy.structure
        %td= pharmacy.county
        %td= pharmacy.city
        %td= pharmacy.address
        %td= pharmacy.chief_pharmacist_name
        %td= pharmacy.details
        %td= link_to 'Show', pharmacy
        %td= link_to 'Edit', edit_pharmacy_path(pharmacy)
        %td= link_to 'Destroy', pharmacy, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= paginate @pharmacies
= link_to 'New Pharmacy', new_pharmacy_path
